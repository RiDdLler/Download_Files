<Window x:Class="FileDownloaderWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="File Downloader" Width="350" Height="150">
    <Grid>
        <TextBox Name="urlTextBox" Margin="10" VerticalAlignment="Top" Text="Enter URL" Foreground="Gray" GotFocus="urlTextBox_GotFocus" LostFocus="urlTextBox_LostFocus"/>
        <Button Name="downloadButton" Content="Download" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,83,0,0" Click="DownloadButton_Click"/>
        <ProgressBar Name="progressBar" HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="10,40,10,0"/>
    </Grid>
</Window>
